<div class="col-xs-8 col-xs-offset-4">
  <h1>Would you rather?</h1>
</div>

<% @questions.each do |q| %>
  <div class="row" style="margin-top: 24px;">
    <div class="col-xs-12">
      <h3 style="text-align:center;"><%= q.question %></h3>
    </div>
    <div class="col-xs-5 col-xs-offset-1 questionLeft">
      <p><%= q.optionOne %></p>
    </div>
    <div class="col-xs-5 questionRight">
      <p><%= q.optionTwo %></p>
    </div>
    <div class="col-xs-1 col-xs-offset-10">
      <p>By: <%= q.postedBy %></p>
    </div>
  </div>
<%end%>
